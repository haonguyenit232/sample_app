  <%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("microposts.text_holder")  %>
  </div>
  <span class="picture">
     <%= f.file_field :picture, accept: Settings.accepted_image_format %>
  </span>
  <%= f.submit t("microposts.posts"), class: "btn btn-danger" %>
<% end %>
